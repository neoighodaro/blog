{{!< default}}
<div class="grid-block">
  <main id="content-wrapper" class="grid-container blog" role="main">
    <div class="grid-block">
      <div class="grid-content">
        {{#foreach posts}}
        <article class="{{post_class}}" role="article" itemscope itemtype="http://schema.org/Article">
          <header class="post-header">
            <time class="post-date" datetime="{{date format="YYYY-MM-DD"}}" itemprop="datePublished">{{date format='DD MMM YYYY'}}</time>
            <h1 class="post-title" itemprop="headline"><a href="{{{url}}}" rel="bookmark">{{title}}</a></h1>
          </header>
          <p class="post-excerpt" itemprop="articleBody">
            {{excerpt}}<span>...</span>
          </p>
          <div class="post-readmore">
            <a class="readmore-link" href="{{{url}}}" rel="bookmark">Read More â†’</a>
          </div>
        </article>
        {{/foreach}}

        {{#if pagination}}
          {{> pagination}}
        {{/if}}
      </div>

    </div>
  </main>
</div>
